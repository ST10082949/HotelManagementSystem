@model IEnumerable<BookingSystem.Models.Hotel>

@{
    ViewData["Title"] = "Hotel Listings";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .hotel-card {
            width: 18rem;
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: white;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .hotel-card:hover {
                transform: translateY(-5px);
            }

            .hotel-card img {
                width: 100%;
                height: auto;
                border-top-left-radius: 10px;
                border-top-right-radius: 10px;
            }

        .card-body {
            padding: 1.5rem;
        }

        .btn-custom {
            background-color: #2575fc;
            color: white;
            border-radius: 5px;
            font-size: 1rem;
            text-align: center;
        }

            .btn-custom:hover {
                background-color: #1a66cc;
            }

        .hotel-name {
            font-size: 1.25rem;
            font-weight: bold;
            color: #333;
        }

        .hotel-location {
            color: #6c757d;
            font-size: 1rem;
        }

        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 1.5rem;
            border-top: 1px solid #e1e8ed;
        }

        .star-rating {
            color: #ffcc00;
            font-size: 1.2rem;
        }

            .star-rating i {
                margin-right: 3px;
            }

        .btn-secondary, .btn-info, .btn-danger {
            font-size: 0.875rem;
            padding: 6px 12px;
            border-radius: 5px;
        }

            .btn-secondary:hover {
                background-color: #6c757d;
            }

            .btn-info:hover {
                background-color: #17a2b8;
            }

            .btn-danger:hover {
                background-color: #c82333;
            }

    </style>
</head>
<body>

    <div class="container">
        <h1 class="my-4 text-center">Hotel Listings</h1>

        <p class="text-center">
            <a asp-action="Create" class="btn btn-custom btn-lg">
                <i class="bi bi-plus-circle"></i> Create New Hotel
            </a>
        </p>

        <div class="card-container">
            @foreach (var item in Model)
            {
                <div class="card hotel-card">
                    <img src="@item.ImageUrl" alt="Hotel Image" class="card-img-top">
                    <div class="card-body">
                        <h5 class="hotel-name">@Html.DisplayFor(modelItem => item.HotelName)</h5>
                        <p class="hotel-location">@Html.DisplayFor(modelItem => item.Location)</p>

                        <div class="star-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi bi-star-fill @(i <= item.Rating ? "text-warning" : "text-muted")"></i>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@item.HotelId" class="btn btn-secondary btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.HotelId" class="btn btn-info btn-sm">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.HotelId" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

<br />
<br />

</html>
