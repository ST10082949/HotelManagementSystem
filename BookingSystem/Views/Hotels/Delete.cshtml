@model BookingSystem.Models.Hotel

@{
    ViewData["Title"] = "Delete Hotel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .delete-container {
            max-width: 600px;
            margin: 30px auto;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .delete-container h4 {
                margin-bottom: 20px;
                font-weight: bold;
            }

            .delete-container h3 {
                color: #dc3545;
            }

        .btn-danger {
            width: 100%;
            padding: 10px;
        }

        .btn-custom-back {
            text-align: center;
            margin-top: 20px;
            font-size: 1.1rem;
        }

            .btn-custom-back a {
                color: #2575fc;
            }

                .btn-custom-back a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <div class="container delete-container">
        <h1>Delete Hotel</h1>
        <h3>Are you sure you want to delete this hotel?</h3>
        <hr />

        <div>
            <h4>Hotel Details</h4>
            <dl class="row">
                <dt class="col-sm-3">
                    <i class="bi bi-house-door"></i> Hotel Name
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.HotelName)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-geo-alt"></i> Location
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Location)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-star"></i> Rating
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Rating)
                </dd>
                <dt class="col-sm-3">
                    <i class="bi bi-image"></i> Image URL
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ImageUrl)
                </dd>
            </dl>
        </div>

        <!-- Delete Confirmation Form -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="HotelId" />
            <div class="form-group">
                <input type="submit" value="Delete Hotel" class="btn btn-danger" />
            </div>
        </form>

        <!-- Back to List Link -->
        <div class="btn-custom-back">
            <a asp-action="Index">
                <i class="bi bi-arrow-left-circle"></i> Back to Hotel List
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
