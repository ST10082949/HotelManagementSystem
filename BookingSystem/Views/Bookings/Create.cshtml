@model BookingSystem.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h1 class="text-center">Create Booking</h1>
<h4 class="text-center">Enter Booking Details</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hotel Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="HotelId" class="control-label"></label>
                <select asp-for="HotelId" class="form-control" asp-items="ViewBag.HotelId">
                    <option value="">Select a Hotel</option>
                </select>
                <span asp-validation-for="HotelId" class="text-danger"></span>
            </div>

            <!-- Room Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="RoomId" class="control-label"></label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId">
                    <option value="">Select a Room</option>
                </select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <!-- Guest Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="GuestId" class="control-label"></label>
                <select asp-for="GuestId" class="form-control" asp-items="ViewBag.GuestId">
                    <option value="">Select a Guest</option>
                </select>
                <span asp-validation-for="GuestId" class="text-danger"></span>
            </div>

            <!-- Check-In Date -->
            <div class="form-group mb-3">
                <label asp-for="CheckInDate" class="control-label"></label>
                <input asp-for="CheckInDate" class="form-control" type="date" />
                <span asp-validation-for="CheckInDate" class="text-danger"></span>
            </div>

            <!-- Check-Out Date -->
            <div class="form-group mb-3">
                <label asp-for="CheckOutDate" class="control-label"></label>
                <input asp-for="CheckOutDate" class="form-control" type="date" />
                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Create Booking" class="btn btn-primary btn-lg rounded-pill" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary btn-sm rounded-pill">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
