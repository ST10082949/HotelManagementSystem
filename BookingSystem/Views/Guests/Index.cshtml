@model IEnumerable<BookingSystem.Models.Guest>

@{
    ViewData["Title"] = "Guest List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f7f6;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .guest-card {
            margin: 20px 0;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            background-color: white;
            transition: transform 0.3s ease;
        }

            .guest-card:hover {
                transform: translateY(-5px);
            }

        .guest-card-header {
            background-color: #e1e8ed;
            color: #3a3a3a;
            padding: 12px;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .guest-card-body {
            padding: 15px 20px;
            font-size: 0.95rem;
            color: #555;
        }

            .guest-card-body p {
                margin: 10px 0;
            }

        .btn-custom {
            margin-top: 15px;
        }

            .btn-custom a {
                color: #fff;
                font-size: 1rem;
                padding: 8px 15px;
                border-radius: 5px;
            }

                .btn-custom a:hover {
                    text-decoration: underline;
                }

        .btn-edit {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-details {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-edit:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }

        .btn-details:hover {
            background-color: #218838;
            border-color: #218838;
        }

        .btn-delete:hover {
            background-color: #c82333;
            border-color: #c82333;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="mt-5">Guest List</h1>

        <!-- Create New Guest Button -->
        <div class="mb-4">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Create New Guest
            </a>
        </div>

        <!-- Guest Cards Display -->
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="guest-card">
                        <div class="guest-card-header">
                            <strong>@item.FullName</strong>
                        </div>
                        <div class="guest-card-body">
                            <p><strong>Email:</strong> @item.Email</p>
                            <p><strong>Phone Number:</strong> @item.PhoneNumber</p>
                            <div class="btn-custom">
                                <a asp-action="Edit" asp-route-id="@item.GuestId" class="btn btn-edit btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.GuestId" class="btn btn-details btn-sm">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.GuestId" class="btn btn-delete btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
