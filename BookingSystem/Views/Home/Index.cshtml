@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ2QFjFQOZY8KQy05yRHy44bNg2IFi6wBxcKng5k5XEkCxjoXM5XQgQv4g2v" crossorigin="anonymous">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .hero-section {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            padding: 100px 0;
        }

        .btn-primary {
            background-color: #2575fc;
            border: none;
        }

            .btn-primary:hover {
                background-color: #1a66cc;
            }
    </style>
</head>
<body>

    <div class="hero-section text-center">
        <h1 class="display-3">Welcome to Our Hotel</h1>
        <p class="lead">Your perfect stay awaits. Experience luxury and comfort like never before.</p>
        <a asp-controller="Bookings" asp-action="Index" class="btn btn-primary btn-lg">Book Now</a>
        <p class="mt-3">Need assistance? <a href="mailto:support@ourhotel.com" class="text-white">Contact Us</a></p>
    </div>

    <div class="container text-center py-5">
        <h2>Explore Our Services</h2>
        <p class="lead">Take a look at our key services to make your stay even better.</p>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://online.jwu.edu/wp-content/uploads/2023/06/guest20loyalty-min.jpg" class="card-img-top" alt="Add a Guest">
                    <div class="card-body">
                        <h5 class="card-title">Add a Guest</h5>
                        <p class="card-text">Easily add new guests to our system for personalized service during their stay.</p>
                        <a  asp-controller="Guests" asp-action="Index" class="btn btn-primary">Add Guest</a>

                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRBTQyiHNNj6YTP7CPTRHM8T1XI6XmEQISjcg&s" class="card-img-top" alt="View Rooms">
                    <div class="card-body">
                        <h5 class="card-title">View Rooms</h5>
                        <p class="card-text">Browse our available rooms with detailed descriptions and photos.</p>
                        <a asp-controller="Rooms" asp-action="Index" class="btn btn-primary">View Rooms</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://ascotsuites.com/wp-content/uploads/2023/02/Booking-Hotel.jpg" class="card-img-top" alt="Make Booking">
                    <div class="card-body">
                        <h5 class="card-title">Make Booking</h5>
                        <p class="card-text">Reserve your stay with us by selecting your desired room and dates.</p>
                        <a asp-area="" asp-controller="Bookings" asp-action="Index" class="btn btn-primary">Make Bookings</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-GLhlTQ8iRABJ1pR7j0K1zdfz7dA2KNb0T5UqB0DRTtbnERzD2t7gq7fcFlz0p5dR" crossorigin="anonymous"></script>
</body>

<br/>
<br/>

</html>
